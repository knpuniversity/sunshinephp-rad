{% extends '::base.html.twig' %}

{% block body %}

<h1>{{ team.name }}</h1>

<p>
    {{ team.description }}
</p>

<div class="btn-group">
    <a href="{{ path('app_team_edit', { 'id': team.id }) }}" class="btn btn-default">Edit</a>
    <a {{ link_attr('delete') }} href="{{ path('app_team_delete', {'id': 1}) }}" class="btn btn-danger">Delete</a>
</div>

{% endblock body %}