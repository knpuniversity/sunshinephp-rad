{% extends '::base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th># Players</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.name }}</td>
                    <td>{{ team.players|length }}</td>
                    <td>
                        <a href="{{ path('app_team_show', {'id': team.id}) }}">Show</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_team_new') }}" class="btn btn-primary pull-right">New</a>

{% endblock body %}
